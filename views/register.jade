extends layout

block content
  .container
    h1 Dripo
    p.lead Register
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="hname", placeholder='Enter Hospital Name')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter email')
      .form-group
          input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel


